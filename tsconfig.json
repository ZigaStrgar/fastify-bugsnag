{
  "extends": "@tsconfig/node16",
  "compilerOptions": {
    "declaration": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": true,
    "noEmit": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
