{
  "name": "fastify-bugsnag",
  "version": "2.0.0",
  "description": "Fastify plugin for Bugsnag",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "lint": "ts-standard --verbose | snazzy",
    "lint:fix": "ts-standard --fix | snazzy",
    "prepublish": "npm run build",
    "postversion": "git push --tags && git push origin main && echo \"Successfully published new package version $npm_package_version\"",
    "preversion": "npm run lint && npm run test && npm run build",
    "test": "tap test/*.test.ts --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZigaStrgar/fastify-bugsnag.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "bugsnag",
    "crash-logging",
    "errors",
    "error-logging",
    "error-reporting",
    "fastify-bugsnag",
    "fastify-bugsnag-plugin",
    "fastify-error-reporting",
    "fastify-plugin"
  ],
  "author": "Å½iga Strgar <ziga.strgar@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ZigaStrgar/fastify-bugsnag/issues"
  },
  "homepage": "https://github.com/ZigaStrgar/fastify-bugsnag#readme",
  "dependencies": {
    "18": "^0.0.0",
    "@bugsnag/js": "^7.17.0",
    "@bugsnag/node": "^7.17.0",
    "fastify-plugin": "^4.0.0"
  },
  "engines": {
    "node": "^16.18.1||^18.12.1||>=20.0.0"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@types/node": "^18.0.0",
    "@types/tap": "^15.0.7",
    "fastify": "^4.3.0",
    "snazzy": "^9.0.0",
    "tap": "^16.2.0",
    "ts-node": "^10.8.0",
    "ts-standard": "^12.0.0",
    "tsd": "^0.28.0",
    "typescript": "~5.0.4"
  },
  "ts-standard": {
    "ignore": [
      "dist"
    ],
    "files": [
      "src/**/*.ts",
      "test/**/*.ts"
    ]
  },
  "tsd": {
    "directory": "test/types"
  }
}
